/* Reset Accordion Elements */
var accordionBody = $('.accordion > .accordion-container > .accordion-body'),
  accordionTitleTarget = $('.accordion > .accordion-container > .accordion-title > a');

if ($('.accordion').length) {
  accordionBody.hide();
}

accordionTitleTarget.on('click', accordionOnClick);

/* initialize sliders */
$('.slider').each(function () {
  var data = $(this).data();
  $(this).slider(data);
});

provisional_rating(); /* reloads the provisional rating sliders */
ready(); /* reloads the new quote form */
